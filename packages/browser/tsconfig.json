{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
