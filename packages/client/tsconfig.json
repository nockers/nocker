{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
