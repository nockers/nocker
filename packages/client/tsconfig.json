{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
